<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spacecasestudios.messagemonster.ui.RetrievePasswordActivity"
    android:focusable="true"
    style="@style/BackgroundTheme">

    <ImageView
        android:id="@+id/titleImage"
        style="@style/TitleTextImage" />

    <ImageView
        android:id="@+id/tentacleImage"
        style="@style/TentacleImage"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        style="@style/FieldContainer">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailField"
        android:hint="@string/email_hint" />

    </LinearLayout>

    <Button
        android:id="@+id/retrievePasswordButton"
        android:layout_below="@+id/linear_layout"
        android:text="@string/retrieve_password_label"
        style="@style/Button"/>



</RelativeLayout>
